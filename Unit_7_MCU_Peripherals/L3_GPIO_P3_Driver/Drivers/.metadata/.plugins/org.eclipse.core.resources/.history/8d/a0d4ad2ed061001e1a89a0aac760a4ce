void CLOCK_init()
{
	//Enable GPIOA clock
	RCC_GPIOA_Clock_Enable;
	//Enable GPIOB clock
	RCC_GPIOB_Clock_Enable;
}

void WAIT(uint32_t time)
{
	uint32_t counter1 , counter2;
	for(counter1 = 0 ; counter1 < time ; counter1++)
		for(counter2 = 0 ; counter2 < 255 ; counter2++);
}

